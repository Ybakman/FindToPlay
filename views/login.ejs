
<% include ./partials/header %>
<div class="container" >
    <div class="row">
        <div style=" min-width: 300px; width: 30%; margin: 25px auto;">
            <form action="/login" method="post" id="register">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Kullanıcı Adı" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" pattern=".{6,}" title="Parolanız uzunluğu 6 karakterden fazla olmalıdır" placeholder="Parola" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Giriş Yap</button>
                </div>
            </form>
            <a href="/">AnaSayfa</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>

