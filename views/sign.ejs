<% include ./partials/header %>
<div class="container" >
    <div class="row">
        <div style=" min-width: 300px; width: 30%; margin: 25px auto;">
            <form action="/sign" method="post" id="register">
                <div class="form-group">
                    <input class="form-control" type="email" name="mail" placeholder="E-posta Adresi" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Kullanıcı Adı" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" pattern=".{6,}" title="Parolanız uzunluğu 6 karakterden fazla olmalıdır" placeholder="Parola" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="dogumYılı" placeholder="Doğum Yılı ör:1999" min="1900" max="2018" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Kayıt Ol</button>
                </div>
            </form>
            <a href="/">AnaSayfa</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>

